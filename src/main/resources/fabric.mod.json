{
  "schemaVersion": 1,
  "id": "nbtmodel",
  "version": "${version}",

  "name": "Nbt Model Mod",
  "description": "Support for using nbt to specify item stack's model.",
  "authors": [
    "Slarper on github"
  ],
  "contact": {
    "homepage": "https://github.com/Slarper/nbt-model",
    "sources": "https://github.com/Slarper/nbt-model"
  },

  "license": "CC0-1.0",
  "icon": "assets/nbtmodel/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "slarper.nbtmodel.NbtModel"
    ],
    "client": [
      "slarper.nbtmodel.client.NbtModelClient"
    ]
  },
  "mixins": [
    "nbtmodel.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
